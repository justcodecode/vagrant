#!/bin/bash
REGION=`curl -s http://169.254.169.254/latest/dynamic/instance-identity/document|grep region|awk -F\" '{print $4}'`
INSTANCE_ID=`curl -s http://169.254.169.254/latest/meta-data/instance-id`
YEAR=`date +"%Y"`
MONTH=`date +"%m"`
DAY=`date +"%d"`

/usr/local/bin/aws s3 mv /opt/log s3://{{logrotate_s3_bucket}}/{{logrotate_s3_prefix}}/${YEAR}/${MONTH}/${DAY}/${INSTANCE_ID} --region ${REGION} --recursive --storage-class REDUCED_REDUNDANCY
